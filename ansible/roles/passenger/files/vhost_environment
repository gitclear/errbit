# If the DESTINATION_IP variable exists then use it to build the rcp alias
# otherwise attempt to extract it from the SSH_CONNECTION variable
if [ -z ${DESTINATION_IP+x} ]; then
  regex="[0-9]+.[0-9]+.[0-9]+.[0-9]+ [0-9]+ ([0-9]+.[0-9]+.[0-9]+.[0-9]+) [0-9]+"
  [[ $SSH_CONNECTION =~ $regex ]]
  DESTINATION_IP="${BASH_REMATCH[1]}"
fi

declare -A ipdirectory

ipdirectory=(
["10.0.100.121"]="staging1"
["10.0.100.122"]="staging2"
)

PROJ_ROOT="gitclear/${ipdirectory[$DESTINATION_IP]}/current"
